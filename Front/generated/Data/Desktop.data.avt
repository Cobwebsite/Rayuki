import { ApplicationOpen } from './ApplicationOpen.lib.avt';
import { ImageFile } from './DataTypes/ImageFile.lib.avt';

namespace Data {

	export enum BackgroundSize {
		Cover,
		Contain,
		Stretch
	}

	@Convertible()
	export class Desktop extends AventusSharp.Data.Storable implements Aventus.IData {
		public static override get Fullname(): string { return "Core.Data.Desktop, Core"; }
		public Name!: string;
		public Token!: string;
		public UserId?: number = undefined;
		public Configuration: DekstopConfiguration = new DekstopConfiguration();
		public Icons: DesktopAppIcon[] = [];
		public Applications: ApplicationOpen[] = [];
	}

	@Convertible()
	export class DekstopConfiguration extends AventusSharp.Data.Storable implements Aventus.IData {
		public static override get Fullname(): string { return "Core.Data.DekstopConfiguration, Core"; }
		public Background!: ImageFile;
		public BackgroundSize: BackgroundSize = BackgroundSize.Cover;
		public SyncDesktop: boolean = false;
		public SizeMobile: number = 75;
		public SizeTablet: number = 75;
		public SizeDesktop: number = 40;
		public BackgroundColor?: string = undefined;
	}

	export enum DesktopLocation {
		Desktop,
		BottomBar,
		HomeFav
	}

	@Convertible()
	export class DesktopAppIcon extends AventusSharp.Data.Storable implements Aventus.IData {
		public static override get Fullname(): string { return "Core.Data.DesktopAppIcon, Core"; }
		public Position!: number;
		public DesktopId!: number;
		public IconTag!: string;
		public Location!: DesktopLocation;
	}

}