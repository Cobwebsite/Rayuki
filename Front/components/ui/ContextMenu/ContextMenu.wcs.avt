:host {
	--scrollbar-container-display: flex;
	background-color: white;
	border-radius: var(--border-radius-sm);
	box-shadow: var(--elevation-3);
	cursor: pointer;
	display: flex;
	flex-direction: column;
	outline: none;
	overflow: hidden;
	position: absolute;
	-webkit-tap-highlight-color: transparent;
	z-index: 502;

	.container {
		display: flex;
		flex-direction: column;
		padding: 5px 0;
	}
}
