<div class="popup" @element="popupEl">
    <div class="header">
        <div class="background"></div>
        <div class="title">{{ this.info.title }}</div>
        <div class="application-actions">
            <div class="btn red touch" @press="redPress"></div>
        </div>
    </div>
    <rk-scrollable class="content">
        <slot></slot>
    </rk-scrollable>
</div>