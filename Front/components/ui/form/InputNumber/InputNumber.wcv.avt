<label for="input">{{ this.label }}</label>
<div class="input">
    <rk-img src="{{ this.icon }}" class="icon"></rk-img>
    <input id="input" @element="inputEl" placeholder="{{ this.placeholder }}" @focus="removeErrors" @change="onValueChange" />
    <div class="error-logo">!</div>
</div>
<div class="errors">
    for(let error of this.errors) { 
        <div>{{ error }}</div>
    }
</div>