@import "../Button.wcs.avt";

:host {
	--_button-padding: var(--button-padding, 0);
}

:host {
	aspect-ratio: 1 / 1;
	height: 36px;
	min-width: auto;
	border-radius: var(--border-radius-round);

	.hider {
		border-radius: var(--border-radius-round);
	}

	.content {
		.icon {
			--img-fill-color: var(--_button-color);
			height: 100%;
			padding: 0;
		}
	}
}
